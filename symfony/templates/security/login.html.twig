{% extends 'base.html.twig' %}

{% block body %}
    <div class="login">
        <h2>Log in to your account</h2>

        {% if error %}
            <div class="login-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" class="pure-form pure-form-stacked">
            <label for="username">Email</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}">


            <label for="password">Password</label>
            <input type="password" id="password" name="_password">

            <button type="submit" class="pure-button pure-button-primary">Log in</button>
        </form>
        <div class="or-signup">
            Don't have an account? <a href="{{ path('app_register') }}">Sign up</a>
        </div>
    </div>
{% endblock %}
